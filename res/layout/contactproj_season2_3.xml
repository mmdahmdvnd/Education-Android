<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/back6" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Name" 
        android:layout_marginLeft="10dp"
        android:textColor="#fd9106"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:text="Family"
        android:layout_marginLeft="10dp"
        android:textColor="#fd9106" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="Address" 
        android:layout_marginLeft="10dp"
        android:textColor="#fd9106"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:layout_marginLeft="10dp"
        android:textColor="#fd9106" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:text="Number" 
        android:layout_marginLeft="10dp"
        android:textColor="#fd9106"/>

    <TextView
        android:id="@+id/contact_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="TextView" 
       />

    <TextView
        android:id="@+id/contact_family1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/contact_name1"
        android:text="TextView" />

    <TextView
        android:id="@+id/contact_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/contact_family1"
        android:text="TextView" />

    <TextView
        android:id="@+id/contact_email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/contact_address1"
        android:text="TextView" />

    <TextView
        android:id="@+id/contact_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/contact_email1"
        android:text="TextView" />

    <Button
        android:id="@+id/contact_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contact_delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="sms" />

    <Button
        android:id="@+id/contact_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contact_update"
        android:layout_alignBottom="@+id/contact_update"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/contact_update"
        android:text="call" />

    <Button
        android:id="@+id/contact_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/contact_call"
        android:layout_below="@+id/contact_call"
        android:layout_marginTop="17dp"
        android:text="Delete" />

    <Button
        android:id="@+id/contact_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="Update" />

</RelativeLayout>
