<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3" >
 <TextView
        android:id="@+id/textView1_season6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
       
        android:textColor="#fc0473" />

    <ImageView
        android:id="@+id/imageView1_season6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1_season6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ejra_projeh" />

    <ImageView
        android:id="@+id/imageView2_season6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1_season6"
        android:layout_marginRight="10dp"
        android:src="@drawable/source" />

    <TextView
        android:id="@+id/textView2_season6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1_season6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="فصل ششم : فرگمنت"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fc0473"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView_lines"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#000000" />
    
</RelativeLayout>
