<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Main" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:textColor="#6306fc"
        android:text="با کلیک بر روی دکمه save متن نوشته  شده در ادیت تکست در یک فایل txt با نام test2.txt درون پوشه ی note در حافظه دستگاه تایپ میشود .
با دکمه ی open میتوان این متن موجود در فایل test2 را در ادیت تکست نمایش داد و با دکمه clear میتوان متن موجود در این فایل را حذف کرد ."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:gravity="center_vertical|top" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="44dp"
        android:layout_marginRight="17dp"
        android:text="CLEAR" />

    <Button
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/clear"
        android:layout_alignBottom="@+id/clear"
        android:layout_centerHorizontal="true"
        android:text="OPEN" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/open"
        android:layout_alignBottom="@+id/open"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/open"
        android:text="SAVE" />

</RelativeLayout>