<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:id="@+id/scrollView2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:background="@drawable/back2">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"   
    android:paddingBottom="@dimen/activity_vertical_margin" 
    tools:context=".Main"
   >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate"
        android:id="@+id/btn1"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
         android:textColor="#0533fa"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" deActivate"
        android:id="@+id/btn2"
        android:layout_below="@+id/textView"
         android:textColor="#0533fa"
        android:layout_toLeftOf="@+id/btn1"
        android:layout_toStartOf="@+id/btn1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notification to Receive SMS"
        android:id="@+id/textView2"
        android:layout_below="@+id/btn1"
        android:layout_alignRight="@+id/btn1"
        android:layout_alignEnd="@+id/btn1"
        android:layout_marginTop="20dp"
        android:textColor="#c720f7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate"
        android:id="@+id/btn3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
         android:textColor="#0533fa"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" deActivate"
        android:id="@+id/btn4"
        android:layout_alignTop="@+id/btn3"
         android:textColor="#0533fa"
        android:layout_toLeftOf="@+id/btn3"
        android:layout_toStartOf="@+id/btn3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notification for Change Wi-Fi"
        android:id="@+id/textView3"
        android:layout_below="@+id/btn3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" 
        android:textColor="#c720f7"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate"
        android:id="@+id/btn5"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
         android:textColor="#0533fa"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" deActivate"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"
         android:textColor="#0533fa"
        android:layout_toStartOf="@+id/btn5" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn2"
        android:layout_centerHorizontal="true"
        android:text="Notification to connect charging cable"
        android:textSize="17dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#c720f7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"    
        android:text="این صفحه را میتوانید جزء تنظیمات برنامه قرار دهید زیرا طبق کدهای این برنامه - صفحه ی کنونی  تنها تنظیمات فعال و غیر فعال کردن برودکستها را انجام میدهد و مستقل از برودکستها میباشد . وبرودکستها بدون این تنظیمات نیز بصورت پیشفرض فعالند ."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="150dp"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/btn5"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:text="android-mtr-design.ir"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"      
        android:text="در صورت اتصال کابل یو اس بی به دستگاه و یا رسیدن اس ام اس و یا روشن شدن وای فای دستگاه یک پیام بوسیله ی برودکست ریسیور در status bar دستگاه نشان داده میشود ."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#c720f7" />

</RelativeLayout>

</ScrollView>
